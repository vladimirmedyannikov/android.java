<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/root"
        style="@style/root">

        <ProgressBar
            android:id="@+id/progress"
            style="@style/item"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <LinearLayout
            style="@style/root"
            android:orientation="vertical"
            android:padding="@dimen/pd_xxxsmall">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/oldpass_wrapper"
                style="@style/text_input_layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/oldpass"
                    style="@style/edit_profile.input"
                    android:hint="Текущий пароль"
                    android:inputType="textCapSentences" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/newpass_wrapper"
                style="@style/text_input_layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/newpass"
                    style="@style/edit_profile.input"
                    android:hint="Новый пароль"
                    android:inputType="textCapSentences" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/repeatpass_wrapper"
                style="@style/text_input_layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/repeatpass"
                    style="@style/edit_profile.input"
                    android:hint="Повтор нового пароля"
                    android:inputType="textCapSentences" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </RelativeLayout>

</layout>
