<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="ru.mos.polls.newprofile.vm.CustomFlatFragmentVM"/>
    </data>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/layout_main"
        style="@style/root">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/linear"
                android:padding="@dimen/pd_xsmall">

                <TextView
                    style="@style/text.xsmall.green"
                    android:text="@string/flat_district"/>

                <Spinner
                    android:id="@+id/districtSpinner"
                    style="@style/item"
                    android:layout_marginTop="@dimen/pd_xxsmall"/>

                <TextView
                    android:id="@+id/areaLabel"
                    style="@style/text.xsmall.green"
                    android:layout_marginTop="@dimen/pd_xxsmall"
                    android:text="@string/flat_area"
                    android:visibility="gone"/>

                <Spinner
                    android:id="@+id/areaSpinner"
                    style="@style/item"
                    android:layout_marginTop="@dimen/pd_xxsmall"
                    android:clickable="false"
                    android:visibility="gone"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/street_wrapper"
                    style="@style/item">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/street"
                        style="@style/input"
                        android:hint="@string/flat_street"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/building_wrapper"
                    style="@style/item">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/building"
                        style="@style/input"
                        android:hint="@string/flat_building"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/save"
                    style="@style/button.centered.disabled"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/pd_xlarge"
                    android:minWidth="@dimen/vs_xxlarge"
                    android:text="@string/select"/>

                <include layout="@layout/layout_flat_warning_block"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
