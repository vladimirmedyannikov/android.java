<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/root"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/avatarToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_alignParentTop="true"/>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/ptrLayout"
            style="@style/root"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>

        </android.support.v4.widget.SwipeRefreshLayout>
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@id/empty"
        style="@style/item.linear"
        android:paddingTop="@dimen/vs_xxxsmall">

        <TextView
            style="@style/text.large.gray"
            android:padding="@dimen/pd_xsmall"
            android:text="@string/empty_quest_list"/>
        <!--Социальные сети-->
        <LinearLayout
            style="@style/item.linear"
            android:layout_marginTop="@dimen/pd_xxsmall"
            android:background="@drawable/background_text_field">

            <TextView
                android:id="@+id/subscribe"
                style="@style/basicIcon"
                android:drawableLeft="@drawable/rss"
                android:text="@string/do_subscribe"/>
        </LinearLayout>
    </LinearLayout>
    <!--Заглушка при отсутсвии интернета -->
    <ScrollView
        android:id="@+id/stubOffline"
        style="@style/root"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <LinearLayout
            style="@style/item.linear"
            android:layout_gravity="center">

            <Button
                android:id="@+id/refresh"
                style="@style/button.centered"
                android:layout_gravity="center_horizontal"
                android:text="@string/refresh"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>