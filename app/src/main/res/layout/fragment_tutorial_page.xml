<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/root.padding">

    <LinearLayout
        style="@style/item.linear"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/tutorial_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/im_1"/>

        <TextView
            style="@style/text.medium"
            android:id="@+id/tutorial_text"
            android:gravity="center"
            android:layout_marginTop="@dimen/pd_xsmall"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/tutorial_description"
            tools:text="@string/tutorial_description_1"
            />
    </LinearLayout>

</RelativeLayout>