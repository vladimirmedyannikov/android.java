<?xml version="1.0" encoding="utf-8"?>
<ScrollView style="@style/linear"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/item.linear">

        <TextView
            android:id="@+id/message"
            style="@style/text.large"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/pd_xxsmall"
            android:paddingLeft="@dimen/pd_normal"
            android:paddingRight="@dimen/pd_normal"
            android:paddingTop="@dimen/pd_xxsmall"/>

        <include layout="@layout/ag_separator"/>

        <TextView
            android:id="@+id/yes"
            style="@style/text.large"
            android:layout_width="match_parent"
            android:background="@drawable/ag_list_selector"
            android:gravity="center"
            android:padding="@dimen/pd_normal"
            android:text="@string/ag_yes"
            android:textStyle="bold"/>

        <include layout="@layout/ag_separator"/>

        <TextView
            android:id="@+id/cancel"
            style="@style/text.large"
            android:layout_width="match_parent"
            android:background="@drawable/ag_list_selector"
            android:gravity="center"
            android:padding="@dimen/pd_normal"
            android:text="@string/ag_no_only"/>

        <include layout="@layout/ag_separator"/>

        <TextView
            android:id="@+id/disable"
            style="@style/text.large"
            android:layout_width="match_parent"
            android:background="@drawable/ag_list_selector"
            android:gravity="center"
            android:padding="@dimen/pd_normal"
            android:text="@string/ag_not_more"/>
    </LinearLayout>
</ScrollView>