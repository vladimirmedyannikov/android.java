        style="@style/ripple"
        android:layout_width="@dimen/vs_xxsmall"
        android:layout_height="@dimen/vs_xxsmall"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/pd_xxsmall"
        android:layout_marginRight="@dimen/pd_xxsmall"/>
</RelativeLayout>
