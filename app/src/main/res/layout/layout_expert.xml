    <ProgressBar
        android:id="@+id/loadingProgress"
        style="@style/wrap"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/pd_xxsmall"
        android:layout_marginRight="@dimen/pd_xxsmall"/>

    <de.hdodenhof.circleimageview.CircleImageView
