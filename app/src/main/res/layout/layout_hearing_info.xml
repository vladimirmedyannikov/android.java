<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/ag_separator" />

    <TextView
        android:id="@+id/exposition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ag_list_selector"
        android:drawableLeft="@drawable/book"
        android:drawablePadding="@dimen/pd_xxsmall"
        android:drawableRight="@drawable/arrow_question"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/pd_normal"
        android:paddingLeft="@dimen/pd_xxsmall"
        android:paddingRight="@dimen/pd_xxsmall"
        android:paddingTop="@dimen/pd_normal"
        android:text="@string/title_view_exposition"
        android:textSize="@dimen/ts_normal" />

    <include layout="@layout/ag_separator" />

    <TextView
        android:id="@+id/meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ag_list_selector"
        android:drawableLeft="@drawable/book"
        android:drawablePadding="@dimen/pd_xxsmall"
        android:drawableRight="@drawable/arrow_question"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/pd_normal"
        android:paddingLeft="@dimen/pd_xxsmall"
        android:paddingRight="@dimen/pd_xxsmall"
        android:paddingTop="@dimen/pd_normal"
        android:text="@string/title_view_meeting"
        android:textSize="@dimen/ts_normal" />

    <include layout="@layout/ag_separator" />

</LinearLayout>