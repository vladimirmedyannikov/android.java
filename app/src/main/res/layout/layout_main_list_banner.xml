<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        style="@style/text.small.green"
        android:layout_width="match_parent"
        android:background="@color/yellow"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/banner_project_title_size"
        android:text="Проект Мэра" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/sss_fon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/banner_top_pad">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/banner_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingRight="@dimen/banner_right_pad" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
