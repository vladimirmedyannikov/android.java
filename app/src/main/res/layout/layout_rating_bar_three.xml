<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item"
    android:layout_margin="@dimen/thin_separator">

    <RelativeLayout
        style="@style/item">

        <LinearLayout
            android:id="@+id/stars"
            style="@style/ChartsStarsContainer">

            <TextView
                style="@style/chartText.star"
                android:text="3" />

            <include layout="@layout/layout_star" />
        </LinearLayout>

        <TextView
            android:id="@+id/countThreeMark"
            style="@style/chartText.count"
            android:layout_toRightOf="@id/stars"
            android:text="1" />

        <RelativeLayout
            android:id="@+id/containerBar"
            style="@style/ChartsContainerBar"
            android:layout_below="@id/countThreeMark">

            <LinearLayout
                android:id="@+id/barThree"
                style="@style/ChartsProgressBar"
                android:layout_width="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/gray_lightest" />

            <LinearLayout
                android:id="@+id/barForThree"
                style="@style/ChartsProgressBar"
                android:background="@color/rating_orange" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>