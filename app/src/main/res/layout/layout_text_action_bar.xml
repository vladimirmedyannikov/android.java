<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/header"
        android:textSize="@dimen/ts_large"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/itemSelector"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ag_list_selector">

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="@dimen/pd_normal"
            android:layout_marginRight="@dimen/pd_normal"
            android:background="@drawable/ag_list_selector"
            android:textSize="@dimen/ts_small"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
