<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/quest_container">

    <android.support.v7.widget.CardView style="@style/cardview">

        <include layout="@layout/layout_back" />

        <RelativeLayout
            android:id="@+id/front"
            style="@style/root"
            android:background="@drawable/quest_background_pink"
            android:gravity="left|center"
            android:tag="front">

            <!--android:layout_toLeftOf="@+id/rrPrice"-->
            <ImageView
                android:id="@+id/markerSpecial"
                style="@style/wrap"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/pd_xxsmall"
                android:paddingRight="@dimen/pd_xxsmall"
                android:src="@drawable/icon02"
                android:visibility="gone" />

            <include
                layout="@layout/quest_price"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/title"
                style="@style/quest_title"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/markerSpecial"
                android:drawableLeft="@drawable/icon02"
                android:drawablePadding="@dimen/pd_xxsmall" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>