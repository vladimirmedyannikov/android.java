<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/quest_container">

    <include layout="@layout/layout_back" />

    <RelativeLayout
        android:id="@+id/front"
        style="@style/root"
        android:background="@drawable/quest_background_sky"
        android:gravity="center"
        android:tag="front">

        <ImageView
            android:id="@+id/icon"
            style="@style/wrap"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/image_icon_category_profile" />

        <include
            android:id="@+id/contprice"
            layout="@layout/quest_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            style="@style/item.linear"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/contprice"
            android:layout_toRightOf="@id/icon"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/title"
                style="@style/quest_title"
                android:text="Заполнить профиль" />

            <TextView
                android:id="@+id/details"
                style="@style/quest_detail"
                android:text="Заполнить профиль fjsakjfkdasjfasjf;kljask;ldfjas;klfj;sakdljf;klsdajf;klaskjfdsak;ljf;kljafds;klj;lksadjf;kljsda;kl fadksjk;lfj a;lfskjdfkljdsalfkjdas;lkjf;sakdljf;ladsjf;laskdjf;lasdf;lkj flkdsaj fasdlkjf asdfjsda;ljf fasdkjdas;lkjf;lkdsajf af;jasd;" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>