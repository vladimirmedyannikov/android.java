<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/quest_container"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/layout_back"/>

    <LinearLayout
        android:id="@+id/front"
        style="@style/item"
        android:layout_centerVertical="true"
        android:background="@drawable/back_ag"
        android:gravity="center"
        android:padding="@dimen/pd_xsmall"
        android:tag="front">

        <TextView
            android:id="@+id/title"
            style="@style/quest_title"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/image_icon_category_result_green"
            android:drawablePadding="@dimen/pd_xxsmall"
            android:textColor="@color/green_light"/>
    </LinearLayout>
</RelativeLayout>