<?xml version="1.0" encoding="utf-8"?>
<FrameLayout style="@style/root"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:paddingBottom="@dimen/thick_separator">

    <RelativeLayout
        android:id="@+id/headerRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <View
            android:id="@+id/fake_bar1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:background="@color/actionbar_background"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatar"
            android:layout_width="@dimen/vs_xxsmall"
            android:layout_height="@dimen/vs_xxsmall"
            android:layout_centerInParent="true"
            android:src="@drawable/unlogin"/>
    </RelativeLayout>
</FrameLayout>