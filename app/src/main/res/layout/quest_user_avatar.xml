<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/item.linear"
        android:paddingBottom="@dimen/thick_separator">

        <RelativeLayout
            android:id="@+id/headerRoot"
            style="@style/root"
            android:clipToPadding="false"
            android:visibility="visible">

            <View
                android:id="@+id/fake_bar1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/rect_shadow"
                android:elevation="5dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userAvatar"
                android:layout_width="@dimen/vs_xxsmall"
                android:layout_height="@dimen/vs_xxsmall"
                android:layout_centerInParent="true"
                android:elevation="6dp"
                android:src="@drawable/unlogin"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/thin_separator" />
        </RelativeLayout>
    </FrameLayout>
</layout>