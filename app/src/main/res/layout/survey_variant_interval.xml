<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/item.linear"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text"
        style="@style/text.small"
        android:textColor="@color/survey_listitem_text_color"/>

    <TextView
        android:id="@+id/value"
        style="@style/text.small"
        android:textColor="@color/survey_listitem_text_color"/>

    <TextView
        android:id="@+id/stubLeft"
        style="@style/text.small"
        android:text="@string/beginning_of_interval_not_set"
        android:textColor="@color/survey_listitem_hint_color"
        android:textStyle="italic"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/stubRight"
        style="@style/text.small"
        android:text="@string/ending_of_interval_not_set"
        android:textColor="@color/survey_listitem_hint_color"
        android:textStyle="italic"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/stubBoth"
        style="@style/text.small"
        android:text="@string/interval_not_set"
        android:textColor="@color/survey_listitem_hint_color"
        android:textStyle="italic"
        android:visibility="gone"/>
</LinearLayout>