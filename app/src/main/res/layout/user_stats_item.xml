<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="ru.mos.polls.profile.vm.UserStatisticsVM" />
    </data>

    <RelativeLayout
        style="@style/item"
        android:padding="@dimen/pd_xsmall">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/agUser_stat_title"
            style="@style/text.normal.black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@{viewModel.title}" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/agUser_stat_value"
            style="@style/text.normal.black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@{viewModel.value}"
            android:textColor="@color/actionbar_background" />
    </RelativeLayout>
</layout>
