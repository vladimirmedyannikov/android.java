<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="input" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_normal</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textCursorDrawable">@null</item>

        <!--Only Android 8.0 bug, where focusing on EditText-->
        <item name="android:importantForAutofill">noExcludeDescendants</item>
    </style>

    <style name="edit_profile" parent="text.normal.black">
        <item name="android:paddingTop">@dimen/pd_xsmall</item>
        <item name="android:paddingBottom">@dimen/pd_xsmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>

        <!--Only Android 8.0 bug, where focusing on EditText-->
        <item name="android:importantForAutofill">noExcludeDescendants</item>
    </style>
</resources>