<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="chartText" parent="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_normal</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="chartText.fullRating">
        <item name="android:textSize">@dimen/ts_main_header</item>
    </style>

    <style name="chartText.fullCount">
        <item name="android:textSize">@dimen/ts_small</item>
    </style>

    <style name="chartText.star" parent="@style/text">
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">@dimen/ts_small</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="chartText.count" parent="text">
        <item name="android:layout_marginLeft">@dimen/pd_xxsmall</item>
        <item name="android:paddingBottom">@dimen/thick_separator</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/ts_small</item>
    </style>

    <style name="ChartsStarsContainer">
        <item name="android:layout_width">@dimen/vs_xxsmall</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/pd_xlarge</item>
    </style>

    <style name="ChartsContainerBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/rating_bar_max_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/pd_xxsmall</item>
        <item name="android:layout_marginTop">@dimen/pd_xsmall</item>
        <!--<item name="android:layout_marginRight">5dp</item>-->
        <item name="android:layout_toRightOf">@id/stars</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--ВНИМАНИЕ: Так как ширина и длина поля диаграммы вычисляется внутри метода, то выравнивание перезадается из кода-->
    <style name="ChartsProgressBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/pd_xxlarge</item>
        <item name="android:layout_height">@dimen/rating_bar_height</item>
        <item name="android:paddingTop">@dimen/pd_xsmall</item>
        <item name="android:layout_marginRight">@dimen/pd_xxsmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>