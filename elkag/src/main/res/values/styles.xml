<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- dynamic elements' styles -->
    <style name="DynamicTheme">
        <item name="dynamicSeparatorStyle">@style/DynamicSeparatorStyle</item>
        <item name="dynamicLinkStyle">@style/DynamicLinkStyle</item>
        <item name="dynamicTextTitleStyle">@style/DynamicTitleStyle</item>
        <item name="dynamicTextBodyStyle">@style/DynamicTextBodyStyle</item>
    </style>

    <!-- Themes -->
    <style name="AuthTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/elk_back_auth</item>
        <item name="android:editTextStyle">@style/AuthTheme.EditText</item>
        <item name="android:buttonStyle">@style/AuthTheme.Button</item>

        <item name="elk_errorTextStyle">@style/AuthTheme.ErrorTextStyle</item>
        <item name="elk_pageNameStyle">@style/AuthTheme.PageNameStyle</item>
    </style>

    <style name="AuthTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar" tools:ignore="NewApi">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProfileTheme" parent="Theme.AppCompat">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ProfileActionBar</item>
        <item name="actionBarStyle">@style/ProfileActionBar</item>
        <item name="actionModeCloseDrawable">@drawable/abc_ic_cab_done</item>
        <item name="android:actionModeCloseDrawable" tools:ignore="NewApi">@drawable/abc_ic_cab_done</item>
        <item name="android:actionModeStyle" tools:ignore="NewApi">@style/ProfileTheme.ActionMode</item>
        <item name="actionModeStyle" tools:ignore="NewApi">@style/ProfileTheme.ActionMode</item>
        <item name="actionModeBackground">@drawable/elk_actionbar_actionmode</item>
        <item name="android:actionModeBackground" tools:ignore="NewApi">@drawable/elk_actionbar_actionmode</item>
        <item name="android:windowBackground">@color/elk_lightBackground</item>
        <item name="android:dropDownListViewStyle">@style/ProfileDropDownStyle</item>
        <item name="android:dropDownSelector">@drawable/elk_list_selector</item>
        <item name="android:checkboxStyle">@style/ProfileTheme.CheckBox</item>

        <item name="android:editTextStyle">@style/ProfileTheme.EditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/ProfileTheme.EditText</item>
        <item name="android:buttonStyle">@style/ProfileTheme.Button</item>
        <item name="android:spinnerStyle">@style/ProfileTheme.Spinner</item>
        <item name="android:listSelector">@drawable/elk_list_selector</item>

    </style>
</resources>