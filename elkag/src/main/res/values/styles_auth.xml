<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AuthTheme.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/elk_back_edit_text_auth</item>
        <item name="android:textColor">@color/elk_authEditTextColor</item>
        <item name="android:textColorHint">@color/elk_authHintColor</item>
    </style>

    <style name="AuthTheme.PageNameStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/elk_authErrorColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="AuthTheme.ErrorTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/elk_authErrorColor</item>
    </style>

    <style name="AuthTheme.Button.Register">
        <item name="android:background">@drawable/elk_back_register</item>
        <item name="android:textColor">@color/elk_authRedColor</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthTheme.EMPStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/elk_authEMPColor</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="AuthTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/elk_back_btn_auth</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AuthTheme.InfoTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/elk_authGreyColor</item>
    </style>

</resources>