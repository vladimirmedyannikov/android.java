<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ProfileTheme.HintText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/elk_hintFlatColor</item>
        <item name="android:textIsSelectable" tools:ignore="NewApi">true</item>
    </style>


    <style name="ProfileTheme.WarningText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/elk_warningColor</item>
    </style>

    <style name="ProfileTheme.SeparatorGrey">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/elk_separatorGreyColor</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ProfileTheme.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/elk_spinner_background</item>
        <item name="android:dropDownSelector">@drawable/elk_list_selector</item>
    </style>

    <style name="ProfileTheme.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/elk_back_auth_blue</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ProfileTheme.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/elk_back_edit_text</item>
        <item name="android:textColor">@color/elk_editTextColor</item>
        <item name="android:textColorHint">@color/elk_editTextHintColor</item>
    </style>

    <style name="ProfileTheme.CommentText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/elk_mainTextColor</item>
    </style>

    <style name="ProfileTheme.TitleText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/elk_mainTextColor</item>
    </style>

    <style name="ProfileTheme.MainText" parent="ProfileTheme.TitleText">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/elk_list_selector</item>
    </style>

    <style name="ProfileTheme.ValueText">
        <item name="android:textColor">@color/elk_editTextColor</item>
        <item name="android:textColorHint">@color/elk_editTextHintColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ProfileTheme.FlatHintText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/elk_hintColor</item>
    </style>

    <style name="ProfileActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/elk_actionbar</item>
        <item name="background">@drawable/elk_actionbar</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/elk_profileTitleStyle</item>
        <item name="titleTextStyle">@style/elk_profileTitleStyle</item>
    </style>

    <style name="ProfileActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/elk_title_color</item>
    </style>

    <style name="ProfileDropDownStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@drawable/elk_divider_list</item>
        <item name="divider">@drawable/elk_divider_list</item>
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="ProfileTheme.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/elk_btn_check</item>
    </style>

    <style name="ProfileTheme.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/ProfileTheme.ActionMode.TextApperiance</item>
        <item name="android:subtitleTextStyle" tools:ignore="NewApi">@style/ProfileTheme.ActionMode.TextApperiance</item>
        <item name="titleTextStyle">@style/ProfileTheme.ActionMode.TextApperiance</item>
        <item name="subtitleTextStyle">@style/ProfileTheme.ActionMode.TextApperiance</item>
    </style>

    <style name="ProfileTheme.ActionMode.TextApperiance" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/elk_title_color</item>
    </style>

</resources>